<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ServiceCallout async="false" continueOnError="false" enabled="false" name="SC-AuthenticateUser">
    <DisplayName>SC-AuthenticateUser</DisplayName>
    <Properties/>
    <!--<Request clearPayload="false" variable="authenticate.request">-->
    <Request>
        <Set>
            <Headers>
                <Header name="Content-Type">application/x-www-form-urlencoded</Header>
            </Headers>
            <FormParams>
                <FormParam name="grant_type">password</FormParam>
                <FormParam name="username">{externalUsername}</FormParam>
                <FormParam name="password">{externalPassword}</FormParam>
            </FormParams>
            <Verb>POST</Verb>
            <Path/>
        </Set>
        <IgnoreUnresolvedVariables>false</IgnoreUnresolvedVariables>
    </Request>
    <Response>authenticate.response</Response>
    <HTTPTargetConnection>
        <LoadBalancer>
            <Server name="oauth-mock-v1"/>
        </LoadBalancer>
        <Path>{flow.target.basepath}/{flow.target.tokenPathsuffix}</Path>
    </HTTPTargetConnection>
</ServiceCallout>